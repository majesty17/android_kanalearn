<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majesty.kana.TestActivity" >

    <LinearLayout
        android:id="@+id/ll_kana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="测验范围：" />

        <RadioGroup
            android:id="@+id/rg_kana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_hiragana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平假名"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_katakana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="片假名"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_allkana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混合假名"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="测验模式：" />

            <ImageButton
                android:id="@+id/btn_mode_help"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#00000000"
                android:scaleType="fitStart"
                android:src="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_mode_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计次模式"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计时模式"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_inf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无限模式"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_dead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="死亡模式"
                android:textSize="12dp" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/rg_mode_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_mode_game_kana_to_roma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选发音"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_game_roma_to_kana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选假名"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_game_kana_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="片/平互换"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_mode_game_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混合模式"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="次数选择：" />

        <RadioGroup
            android:id="@+id/rg_num_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_num_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10次"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_num_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20次"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_num_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50次"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_num_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_num_user"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:singleLine="true"
                android:inputType="numberSigned"
                android:textSize="12dp" >
            </EditText>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="时间选择：" />

        <RadioGroup
            android:id="@+id/rg_time_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_time_1min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1分"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_time_2min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2分"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_time_5min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5分"
                android:textSize="12dp" />

            <RadioButton
                android:id="@+id/rbtn_time_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp" />

            <EditText
                android:id="@+id/et_time_user"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:singleLine="true"
                android:inputType="numberSigned"
                android:textSize="12dp" >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_test_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始测验" />

    </LinearLayout>
    
</LinearLayout>